{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js" 
    },
    {
      "src": "/(.*)",
      "dest": "/Public/$1" 
    },
    {
      "src": "/register",
      "methods": ["GET", "POST"],
      "dest": "server.js" 
    },
    {
      "src": "/login",
      "methods": ["GET", "POST"],
      "dest": "server.js" 
    },
    {
      "src": "/lego/(.*)",
      "dest": "server.js" 
    },
    {
      "src": "/(.*)",
      "dest": "server.js" 
    }
  ]
}
