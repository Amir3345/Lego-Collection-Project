<%- include('partials/navbar', {page: '/lego/addSet' }) %>

<div style="background-image: url('/img/Lego_wallpaper.jpg');" class="bg-cover bg-center min-h-screen flex flex-col items-center justify-center">

  <div class="bg-yellow-80 bg-opacity-75 text-white text-center py-10 px-4 rounded-lg shadow-lg">
    <h1 class="font-bold text-4xl mb-4">Edit the <%= set.name %> Here</h1> 
</div>

 
  <form action="/lego/editSet/<%= set.set_num %>" method="post" class="max-w-lg mx-auto my-8 px-4 py-6 shadow-lg rounded-lg bg-white bg-opacity-90">
    <div class="mb-4">
        <label for="name" class="block text-gray-700 text-sm font-bold mb-2">Name:</label>
        <input type="text" name="name" id="name" value="<%= set.name %>" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>

    <div class="mb-4">
        <label for="year" class="block text-gray-700 text-sm font-bold mb-2">Year:</label>
        <input type="number" name="year" id="year" value="<%= set.year %>" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>

    <div class="mb-4">
        <label for="num_parts" class="block text-gray-700 text-sm font-bold mb-2">Number of Parts:</label>
        <input type="number" name="num_parts" id="num_parts" value="<%= set.num_parts %>" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>

    <div class="mb-4">
        <label for="img_url" class="block text-gray-700 text-sm font-bold mb-2">Image URL:</label>
        <input type="url" name="img_url" id="img_url" value="<%= set.img_url %>" required class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
    </div>

    <div class="mb-6">
        <label for="theme_id" class="block text-gray-700 text-sm font-bold mb-2">Theme:</label>
        <select name="theme_id" id="theme_id" required class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
          <% themes.forEach(theme => { %>
            <option value="<%= theme.id %>" <%= (set.theme_id == theme.id) ? 'selected' : '' %>><%= theme.name %></option>
          <% }) %>
        </select>
    </div>

    <div class="mb-6">
        <input type="text" name="set_num" id="set_num" value="<%= set.set_num %>" readonly class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline cursor-not-allowed" title="Set number is not editable">
    </div>

    <div class="flex items-center justify-between">
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
            Update Set
        </button>

        <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" >Delete Set</a>
    </div>


  </form>

  
</div>
